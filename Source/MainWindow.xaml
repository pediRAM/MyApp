<Window x:Class="MyApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyApp"
        mc:Ignorable="d"
        Title="MyApp 1.2.3" Height="300" Width="400" Background="LightGray">
    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <TextBox x:Name="textbox" TextWrapping="Wrap" AcceptsReturn="True" AcceptsTab="True" Text="Hello world!" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Padding="10" FontFamily="Consolas" FontSize="16" Background="Black" Foreground="Green"/>
        </ScrollViewer>
    </Grid>
</Window>